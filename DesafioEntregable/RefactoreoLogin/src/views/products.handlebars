<main>
    <h1>Productos</h1>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Description</th>
            <th>Category</th>
            <th>Precio</th>
            <th>Detalles</th>
            <th>Carrito</th>
        </tr>
        {{#each productListJSON.docs}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.category}}</td>
                <td>${{this.price}}</td>
                <td><a href="/products/{{id}}">Informaci√≥n</a></td>
                <td><Button>Agregar al Carrito</Button></td>
            </tr>
            
        {{/each}}    
    </table>
    <div>
        {{#if productListJSON.hasPrevPage}}
        <a href={{productListJSON.prevLink}}> <-Pagina Anterior</a>
        {{/if}}
        <span>Pagina {{productListJSON.page}}</span>
        {{#if productListJSON.hasNextPage}}
        <a href={{productListJSON.nextLink}}>Pagina siguiente-></a>
        {{/if}}
    </div>
    <div style="margin: 20px ;"><tr> 
        <Button><a href="/users/logout"> Cerrar Sesion</a></Button></tr></div>
</main>
<script src="/js/index.js"></script>
