{{#each ticket.docs}}
<h1>Numero de Ticket : {{this.code}}</h1>
<h2>Total a pagar: {{this.amount}}</h2>
<h2>Email: {{this.purchaser}}</h2>
<h2>Fecha y Hora de Compra: {{this.createdAt}}</h2>
{{/each}}


{{#if isValid}}
<div style="display: flex; flex-direction:column; justify-content:center; align-items:center; gap:10px">
{{#each ticket.docs.0.products}}
    <div style="border: 1px black solid; border-radius: 20px; padding:10px; width:500px; margin:10px;">
        <h2>Title: {{{product.title}}}</h2>
        <h3>Price:  ${{product.price}}</h3>
        <h3>Quantity: {{quantity}}</h3>
    </div>
{{/each}}
</div>
<br/>


<div>
    {{#if prevLink}}
    <a href={{prevLink}}>
            Anterior </a>
    {{/if}}

    {{!-- numero de pagina --}}
    &nbsp;
    {{resultProd.page}}
    &nbsp;

    {{#if nextLink}}
    <a href={{nextLink}}>
        Siguiente -> </a>
    {{/if}}
</div>

{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}